<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="505.0" prefWidth="570.0" style="-fx-background-color: #0A4969;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.LoginController">

    <VBox alignment="CENTER" layoutX="37.0" layoutY="25.0" prefHeight="462.0" prefWidth="500.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;">

        <!-- Welcome Label -->
        <Label style="-fx-text-fill: #0A4969; -fx-font-size: 24px;" text="Login" />

        <!-- Username Label and TextField -->
        <HBox alignment="CENTER_LEFT" prefHeight="15.0" prefWidth="487.0" spacing="10">
            <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Username" />
        </HBox>
        <TextField fx:id="usernameField" prefHeight="29.0" prefWidth="434.0" promptText="Username" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />

        <!-- Password Label and PasswordField -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Password" />
        </HBox>
        <PasswordField fx:id="passwordField" prefHeight="29.0" prefWidth="443.0" promptText="Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />

        <!-- Login Button -->
        <Button onAction="#handleLogin" prefHeight="29.0" prefWidth="79.0" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff; -fx-border-width: 2px;" text="Login" />

        <!-- Message Label -->
        <Label fx:id="messageLabel" textFill="#0A4969" />

        <!-- Sign Up Section -->
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-text-fill: #0A4969;" text="Don't have an account?" />
         <Button onAction="#handleSignUp" prefHeight="29.0" prefWidth="69.0" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff; -fx-border-width: 2px;" text="Sign up" />
         <Button layoutX="273.0" layoutY="10.0" onAction="#handleBack" prefHeight="29.0" prefWidth="70.0" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff; -fx-border-width: 2px;" text="Back" />
        </HBox>
    </VBox>

</AnchorPane>
