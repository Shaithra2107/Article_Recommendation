<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.AuthorManagementController">

    <!-- Main Container -->
    <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-padding: 15;" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #0A4969; -fx-padding: 10;">
            <Label text="Author Management Panel" style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" />
            <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #ffffff; -fx-text-fill: #0A4969; -fx-font-size: 14px;" onAction="#handleLogout"/>
        </HBox>

        <!-- Body Section -->
        <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-padding: 10;">
            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="addArticleButton" text="Add Article" style="-fx-background-color: #4caf50; -fx-text-fill: #ffffff;" onAction="#handleAddArticle"/>
                <Button fx:id="editArticleButton" text="Edit Article" style="-fx-background-color: #2196f3; -fx-text-fill: #ffffff;" onAction="#handleEditArticle"/>
                <Button fx:id="deleteArticleButton" text="Delete Article" style="-fx-background-color: #f44336; -fx-text-fill: #ffffff;" onAction="#handleDeleteArticle"/>
            </HBox>

            <!-- Articles List -->
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <Label text="Your Articles" style="-fx-font-size: 18px; -fx-text-fill: #0A4969;" />
                <TableView fx:id="articlesTable" prefHeight="400.0" prefWidth="750.0">
                    <columns>
                        <TableColumn text="ID" prefWidth="50.0" />
                        <TableColumn text="Title" prefWidth="250.0" />
                        <TableColumn text="Category" prefWidth="150.0" />
                        <TableColumn text="Date Created" prefWidth="150.0" />
                        <TableColumn text="Actions" prefWidth="150.0" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
