<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="530.0" prefWidth="700.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.Admin.AdminViewNews">

    <VBox alignment="TOP_CENTER" prefHeight="530.0" prefWidth="700.0" spacing="10.0" style="-fx-padding: 15;">
        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #0A4969; -fx-padding: 10;">
            <Label fx:id="categoryLabel" style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" text="Category: [Category]" />
            <Button onAction="#handleBackToAdmin" style="-fx-background-color: #ffffff; -fx-text-fill: #0A4969;" text="Back to Dashboard" />
        </HBox>

        <!-- News Table -->
        <TableView fx:id="newsTable" prefHeight="434.0" prefWidth="463.0" style="-fx-padding: 20;">
            <columns>
                <TableColumn fx:id="articleIdColumn" prefWidth="38.33334541320801" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="161.66666793823242" text="Title" />
                <TableColumn fx:id="dateColumn" prefWidth="60.33331298828125" text="Date" />
                <TableColumn fx:id="descriptionColumn" prefWidth="211.99996948242188" text="Description" />
                <TableColumn fx:id="urlColumn" prefWidth="157.3333740234375" text="Link" />



            </columns>
        </TableView>

    </VBox>
</AnchorPane>
