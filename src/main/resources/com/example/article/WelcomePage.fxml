<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="631.0" style="-fx-background-color: #0A4969;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.WelcomeController">

    <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="510.0" prefWidth="592.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;">

        <!-- Welcome Label -->
        <Label prefHeight="35.0" prefWidth="628.0" style="-fx-text-fill: #0A4969; -fx-font-size: 24px; -fx-font-weight: bold;" text="                           Welcome to PNRS" />

       <!-- Add Image View here -->
       <ImageView fx:id="welcomeImage" fitHeight="200.0" fitWidth="300.0">
           <Image url="@../../../Images/news_main.jpg" />
       </ImageView>

        <!-- Instruction Label -->
        <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" />

        <!-- Login Button -->
        <Button fx:id="AdminButton" onAction="#handleAdmin" prefHeight="28.0" prefWidth="139.0" style="-fx-background-color: #0A4969; -fx-text-fill: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" text="Admin" />

        <!-- Sign Up Button -->
        <Button fx:id="UserButton" onAction="#handleUser" prefHeight="28.0" prefWidth="138.0" style="-fx-background-color: #0A4969; -fx-text-fill: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff;" text="User" />

    </VBox>

</AnchorPane>
