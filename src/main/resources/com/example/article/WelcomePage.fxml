<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="631.0" style="-fx-background-color: linear-gradient(to bottom, #0A4969, #145C8B);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.WelcomeController">

    <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="519.0" prefWidth="592.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 20; -fx-border-color: #0A4969; -fx-border-width: 2;">

        <!-- Welcome Label -->
        <Label prefHeight="132.0" prefWidth="240.0" style="-fx-text-fill: #0A4969; -fx-font-size: 28px; -fx-font-weight: bold;" text="Welcome to PNRS" />

        <!-- Add Image View -->
        <ImageView fx:id="welcomeImage" fitHeight="210.0" fitWidth="300.0" style="-fx-effect: dropshadow(gaussian, #0A4969, 10, 0.5, 0, 4);">
            <Image url="@../../../Images/news_main.jpg" />
        </ImageView>

        <!-- Instruction Label -->
        <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Choose your role to get started:" />

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="AdminButton" onAction="#handleAdmin" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #0A4969; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-border-color: #ffffff; -fx-border-width: 2;" text="Admin" />
            <Button fx:id="UserButton" onAction="#handleUser" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #0A4969; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20; -fx-border-color: #ffffff; -fx-border-width: 2;" text="User" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="20.0" prefWidth="548.0" spacing="10.0" style="-fx-background-color: #cfd8dc; -fx-padding: 5;">
            <Label style="-fx-font-size: 10px; -fx-text-fill: #607d8b;" text="News Recommendation System Â© 2024" />
        </HBox>
    </VBox>

</AnchorPane>
