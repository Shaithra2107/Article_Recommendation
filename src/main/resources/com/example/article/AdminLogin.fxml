<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="505.0" prefWidth="570.0" style="-fx-background-color: #0A4969;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.AdminLoginController">

    <VBox alignment="CENTER" layoutX="37.0" layoutY="25.0" prefHeight="462.0" prefWidth="500.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;">

        <!-- Welcome Label -->
        <Label style="-fx-text-fill: #0A4969; -fx-font-size: 24px;" text="Admin Login" />

        <!-- Admin ID Label and TextField -->
        <HBox alignment="CENTER_LEFT" prefHeight="15.0" prefWidth="487.0" spacing="10">
            <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Admin ID" />
        </HBox>
        <TextField fx:id="adminIdField" prefHeight="29.0" prefWidth="434.0" promptText="Admin ID" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />

        <!-- Email Label and TextField -->
        <HBox alignment="CENTER_LEFT" prefHeight="15.0" prefWidth="487.0" spacing="10">
            <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Email" />
        </HBox>
        <TextField fx:id="adminEmailField" prefHeight="29.0" prefWidth="434.0" promptText="Email" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />

        <!-- Password Label and PasswordField -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Password" />
        </HBox>
        <PasswordField fx:id="adminPasswordField" prefHeight="29.0" prefWidth="443.0" promptText="Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />

        <!-- Login Button -->
        <Button onAction="#handleAdminLogin" prefHeight="29.0" prefWidth="79.0" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff; -fx-border-width: 2px;" text="Login" />

        <!-- Message Label -->
        <Label fx:id="adminMessageLabel" prefHeight="17.0" prefWidth="163.0" textFill="#0A4969" />

        <!-- Back Button -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleBack" prefHeight="29.0" prefWidth="70.0" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffffff; -fx-border-width: 2px;" text="Back" />
        </HBox>
    </VBox>

</AnchorPane>
