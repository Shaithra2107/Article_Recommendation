<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="530.0" prefWidth="700.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.User.ViewNews">

    <VBox alignment="TOP_CENTER" prefHeight="530.0" prefWidth="700.0" spacing="10.0" style="-fx-padding: 15;">
        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #0A4969; -fx-padding: 10;">
            <Label fx:id="categoryLabel" style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" text="Category: [Category]" />
            <Button onAction="#handleBack" style="-fx-background-color: #ffffff; -fx-text-fill: #0A4969;" text="Back to Dashboard" />
        </HBox>

        <!-- News Table -->
        <TableView fx:id="newsTable" prefHeight="434.0" prefWidth="463.0" style="-fx-padding: 20;">
            <columns>
                <TableColumn fx:id="articleIdColumn" prefWidth="38.33334541320801" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="99.00002670288086" text="Title" />
                <TableColumn fx:id="dateColumn" prefWidth="73.33334350585938" text="Date" />
                <TableColumn fx:id="descriptionColumn" prefWidth="175.33331298828125" text="Description" />
                <TableColumn fx:id="urlColumn" prefWidth="112.00006103515625" text="Link" />
                <!-- Actions Column -->
                <TableColumn fx:id="actionsColumn" minWidth="8.33331298828125" prefWidth="69.6666259765625" text="Actions" />
                <TableColumn fx:id="ratingsColumn" prefWidth="61.33331298828125" text="Ratings" />

            </columns>
        </TableView>

    </VBox>
</AnchorPane>
