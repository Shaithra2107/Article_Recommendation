<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.SubmitArticleController">

    <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-padding: 20;" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Header -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #0A4969; -fx-padding: 10;">
            <Label text="Submit Article" style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" />
            <Button fx:id="backButton" text="Back" style="-fx-background-color: #ffffff; -fx-text-fill: #0A4969;" onAction="#handleBack" />
        </HBox>

        <!-- Article Form -->
        <VBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 20;" prefWidth="700.0">
            <Label text="Title" style="-fx-font-size: 16px; -fx-text-fill: #0A4969;" />
            <TextField fx:id="titleField" promptText="Enter article title" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #ffffff; -fx-border-color: #0A4969; -fx-border-width: 1px;" />

            <Label text="Content" style="-fx-font-size: 16px; -fx-text-fill: #0A4969;" />
            <TextArea fx:id="contentArea" promptText="Write your article here" prefHeight="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #ffffff; -fx-border-color: #0A4969; -fx-border-width: 1px;" />

            <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10;">
                <Button fx:id="submitButton" text="Submit" style="-fx-background-color: #4caf50; -fx-text-fill: #ffffff;" onAction="#handleSubmit" />
                <Button fx:id="clearButton" text="Clear" style="-fx-background-color: #f44336; -fx-text-fill: #ffffff;" onAction="#handleClear" />
            </HBox>
        </VBox>
    </VBox>

</AnchorPane>
