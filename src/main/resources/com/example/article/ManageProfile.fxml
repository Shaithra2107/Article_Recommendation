<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="557.0" prefWidth="749.0" style="-fx-background-color: #0A4969;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.ManageProfileController">

    <VBox alignment="CENTER" prefHeight="604.0" prefWidth="749.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;">
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="105.0" prefWidth="656.0" style="-fx-text-fill: #0A4969; -fx-font-size: 28px;" text="Manage Profile" textAlignment="CENTER">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
         </children>
      </HBox>

        <!-- Profile Picture Section -->
        <HBox alignment="CENTER" prefHeight="85.0" prefWidth="709.0" spacing="10">
            <ImageView fx:id="profileImageView" fitHeight="96.0" fitWidth="119.0" preserveRatio="true" />
            <Button fx:id="changeProfilePictureButton" onAction="#handleChangeProfilePicture" prefHeight="25.0" prefWidth="157.0" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10;" text="Change Picture" />
        </HBox>

        <!-- Full Name Label and TextField -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label prefHeight="25.0" prefWidth="139.0" style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Full Name" />
            <TextField fx:id="fullNameField" prefHeight="29.0" prefWidth="434.0" promptText="Full Name" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />
        </HBox>

        <!-- Email Label and TextField -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label prefHeight="25.0" prefWidth="142.0" style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Email" />
            <TextField fx:id="emailField" prefHeight="29.0" prefWidth="434.0" promptText="Email" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />
        </HBox>

        <!-- Phone Number Label and TextField -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label prefHeight="25.0" prefWidth="142.0" style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Phone Number" />
            <TextField fx:id="phoneField" prefHeight="29.0" prefWidth="434.0" promptText="Phone Number" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />
        </HBox>

        <!-- Gender Label and RadioButtons -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label prefHeight="25.0" prefWidth="152.0" style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Gender" />
            <RadioButton fx:id="maleRadioButton" style="-fx-text-fill: #0A4969;" text="Male" />
            <RadioButton fx:id="femaleRadioButton" style="-fx-text-fill: #0A4969;" text="Female" />
            <RadioButton fx:id="otherRadioButton" style="-fx-text-fill: #0A4969;" text="Other" />
        </HBox>

        <!-- Date of Birth Label and DatePicker -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label prefHeight="25.0" prefWidth="153.0" style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Date of Birth" />
            <DatePicker fx:id="dobField" prefHeight="29.0" prefWidth="434.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />
        </HBox>

        <!-- Change Password Section -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label prefHeight="25.0" prefWidth="152.0" style="-fx-text-fill: #0A4969; -fx-font-size: 16px;" text="Change Password" />
            <PasswordField fx:id="newPasswordField" prefHeight="29.0" prefWidth="434.0" promptText="New Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #0A4969; -fx-border-color: #ffffff; -fx-border-width: 2px; -fx-text-fill: #ffffff;" />
        </HBox>

        <!-- Save and Cancel Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="saveButton" onAction="#handleSaveChanges" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10;" text="Save Changes" />
            <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: #0A4969; -fx-text-fill: #ffffff; -fx-background-radius: 10;" text="Cancel" />
        </HBox>
    </VBox>

</AnchorPane>
