<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.article.ManageArticle">
    <!-- Title Label -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Edit Article" />

    <!-- Article Name Field -->
    <HBox spacing="5">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Article ID:" />
        <TextField fx:id="txtArticleID" prefHeight="25.0" prefWidth="224.0" promptText="Enter article ID" />
       <Button fx:id="btnFetchDetails" onAction="#handleFetchDetails" prefHeight="25.0" prefWidth="90.0" style="-fx-background-color: #ffffff; -fx-text-fill: #0A4969; -fx-background-radius: 10;" text="Fetch Details" />
    </HBox>
    <!-- Article Name Field -->
    <HBox spacing="5">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Article Title:" />
        <TextField fx:id="txtArticleTitle" prefWidth="300" promptText="Enter article name" />
    </HBox>

    <!-- Author Field -->
    <HBox spacing="5">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Date" />
        <TextField fx:id="txtDate" prefWidth="300" promptText="Enter the date" />
    </HBox>

    <!-- Description Field -->
    <VBox spacing="5">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Description:" />
        <TextArea fx:id="txtDescription" prefHeight="100" prefWidth="400" promptText="Enter article description..." wrapText="true" />
    </VBox>

    <!-- Title Field -->
    <HBox spacing="5" />


    <!-- Content Area -->
    <VBox spacing="5" />

    <!-- Tags Field -->
    <HBox spacing="5">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tags:" />
        <TextField fx:id="txtTags" prefWidth="300" promptText="Enter tags (comma-separated)" />
    </HBox>

    <!-- URL Field -->
    <HBox spacing="5">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="URL:" />
        <TextField fx:id="txtURL" prefWidth="300" promptText="Enter article URL" />
    </HBox>

    <!-- Save and Cancel Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnCancel" onAction="#handleCancelEdit" style="-fx-background-color: red; -fx-text-fill: white;" text="Cancel" />
        <Button fx:id="btnSaveChanges" onAction="#handleSaveChanges" style="-fx-background-color: green; -fx-text-fill: white;" text="Save Changes" />
    </HBox>
</VBox>
