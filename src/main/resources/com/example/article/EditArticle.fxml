<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">
    <!-- Title Label -->
    <Label text="Edit Article" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Title Field -->
    <HBox spacing="5">
        <Label text="Title:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextField fx:id="txtTitle" promptText="Enter article title" prefWidth="300" />
    </HBox>

    <!-- Category Dropdown -->
    <HBox spacing="5">
        <Label text="Category:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <ComboBox fx:id="cmbCategory" prefWidth="200" />
    </HBox>

    <!-- Content Area -->
    <VBox spacing="5">
        <Label text="Content:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextArea fx:id="txtContent" promptText="Edit your article content here..." prefHeight="200" prefWidth="400" wrapText="true" />
    </VBox>

    <!-- Suggestions Section -->
    <VBox spacing="5" style="-fx-border-color: gray; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;">
        <Label text="Machine Learning Suggestions" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <TextArea fx:id="txtSuggestions" editable="false" wrapText="true" prefHeight="100" prefWidth="400" />
        <Button text="Generate Suggestions" fx:id="btnGenerateSuggestions" onAction="#handleGenerateSuggestions" />
    </VBox>

    <!-- Save Button -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancelEdit" style="-fx-background-color: red; -fx-text-fill: white;" />
        <Button text="Save Changes" fx:id="btnSaveChanges" onAction="#handleSaveChanges" style="-fx-background-color: green; -fx-text-fill: white;" />
    </HBox>
</VBox>
